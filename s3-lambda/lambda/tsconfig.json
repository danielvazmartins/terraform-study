{
    "compilerOptions": {
      "lib": ["es5", "es6"],
      "module":"commonjs",
      "target": "ES2020",
      "outDir": "dist",
      "strict": true,
      "sourceMap": false,
      "moduleResolution":"node",
      "resolveJsonModule": true,
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "**/*.test.ts"]
  }